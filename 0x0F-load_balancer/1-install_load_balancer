#!/usr/bin/env bash
# Install and configure HAproxy on your lb-01 server.
apt-get update
apt-get install --no-install-recommends software-properties-common
add-apt-repository ppa:vbernat/haproxy-2.7
apt-get install haproxy=2.7.\*
echo "ENABLED=1" >> /etc/default/haproxy
echo "
frontend http
    bind *:80
    default_backend web-back

backend web_back
    balance roundrobin
    server 156844-web-01 18.204.13.56:80 check
    server 156844-web-02 52.86.76.138:80 check " >> ~/etc/haproxy/haproxy.cfg
service haproxy restart